<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.MainActivity">


    <ImageView
        style="@style/background"
        android:src="@drawable/backgroundnuvem" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnHistorico"
            android:background="@drawable/history"
            android:onClick="chamarTelaHistorico"

            style="@style/botaoCantoDireito" />

        <ImageView
            style="@style/image"
            android:src="@drawable/logo" />

        <TextView
            android:text="@string/buscar"
            style="@style/titulo" />

        <TextView
            style="@style/divisor"
            android:text="_________________________________________________________" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinnerCidades"
            android:layout_weight="2"
            style="@style/comboBox" />

        <Button
            style="@style/botaoCantoDireito"
           android:background="@drawable/search"/>

    </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/lvCidades"
                style="@style/listView" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.MainActivity">


    <ImageView
        style="@style/background"
        android:src="@drawable/backgroundnuvem" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/btnHistorico"
            android:onClick="chamarTelaHistorico"
            style="@style/botaoCantoDireito" />

        <TextView
            android:text="@string/buscar"
            style="@style/titulo" />

        <TextView
            style="@style/divisor"
            android:text="_________________________________________________________" />


        <ImageView
            android:layout_width="157dp"
            android:layout_height="135dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:src="@drawable/logo" />

        <Spinner
            android:id="@+id/spinnerCidades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:spinnerMode="dropdown" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/lvCidades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ResultadoActivity">

    <ImageView
        style="@style/background"
        android:src="@drawable/backgroundnuvem"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <TextView
                style="@style/titulo"
                android:layout_weight="2"
                android:text="Florianópolis - BR"
                android:textSize="26sp"
                android:id="@+id/tvCidade"/>

            <Button
                android:id="@+id/btnFavorito"
                style="@style/botaoCantoDireito"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgClima"
            style="@style/image"
            android:src="@drawable/i10d" />

        <TextView
            android:id="@+id/tvClimaDesc"
            style="@style/titulo"
            android:text="Chuva com trovoada"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvTemp"
            style="@style/titulo"
            android:text="22ºC"
            android:textSize="80sp" />

        <TextView
            android:id="@+id/tvUmidade"
            style="@style/titulo"
            android:text="Umidade: 0.2"
            android:textSize="22sp" />
    </LinearLayout>
</RelativeLayout>